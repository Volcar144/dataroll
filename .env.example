# Database Configuration
# PostgreSQL connection string for dataroll's own data
DATABASE_URL="postgresql://username:password@localhost:5432/dataroll?schema=public"

# BetterAuth Configuration
# URL where your app will be accessible
BETTER_AUTH_URL="http://localhost:3000"
# Random secret for signing JWTs and sessions (generate with: openssl rand -hex(32))
BETTER_AUTH_SECRET="your-better-auth-secret-key-here"

# OAuth Provider Configuration
# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (get from GitHub Developer Settings)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Discord OAuth (get from Discord Developer Portal)
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# Security & Encryption
# Key for encrypting database connection credentials
# Generate with: openssl rand -base64(32)
ENCRYPTION_KEY="your-encryption-key-here"

# Environment
NODE_ENV="development"

# Optional: Email Configuration (for password reset, verification emails)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@example.com"
# SMTP_PASS="your-email-password"
# FROM_EMAIL="noreply@yourapp.com"

# Optional: Slack Integration (for notifications)
# SLACK_WEBHOOK_URL="https://hooks.slack.com/services/your/webhook/url"

# Optional: Analytics & Monitoring
# SENTRY_DSN="your-sentry-dsn"
# ANALYTICS_API_KEY="your-analytics-key"

# Logging & Error Tracking
# Logflare API key for log aggregation (get from https://logflare.app)
LOGFLARE_API_KEY="your-logflare-api-key"
# Logflare source token for sending logs
LOGFLARE_SOURCE_TOKEN="your-logflare-source-token"

# Database Migration Configuration
# For Drizzle ORM
DRIZZLE_DATABASE_URL="postgresql://username:password@localhost:5432/dataroll?schema=public"

# For Prisma (same as DATABASE_URL)
# This is set automatically from DATABASE_URL in most cases
# PRISMA_DATABASE_URL="postgresql://username:password@localhost:5432/dataroll?schema=public"

# Security Headers (optional)
# TRUSTED_HOSTS="localhost,127.0.0.1"

# Session Configuration
SESSION_TIMEOUT="2592000" # 30 days in seconds

# Rate Limiting (optional)
# RATE_LIMIT_WINDOW="900000" # 15 minutes in milliseconds
# RATE_LIMIT_MAX_REQUESTS="100" # Max requests per window